<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/background_light"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/media_recycleview_row_margin"
            android:text="Nilesh Darade"
            android:textAppearance="?android:attr/textAppearanceListItem"/>

        <ImageView
            android:id="@+id/userIV"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/likeIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_like"/>

            <ImageButton
                android:id="@+id/commentIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_comment"/>

        </LinearLayout>
        <TextView
            android:id="@+id/userCaptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/media_recycleview_row_margin"
            android:text="#MyLifeMyRulez"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"/>
        <TextView
            android:id="@+id/likesCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/media_recycleview_row_margin"
            android:text="12 likes"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
